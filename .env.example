# 必填 - OKX API 凭证（请在 Railway Variables 中设置实际值）
OKX_API_KEY=your_api_key
OKX_API_SECRET=your_secret_key
OKX_API_PASSPHRASE=your_passphrase
# 可兼容旧命名（若你用的是 OKX_SECRET_KEY/OKX_PASSPHRASE，脚本也会识别）
# OKX_SECRET_KEY=
# OKX_PASSPHRASE=

# 可选 - 运行环境
SANDBOX=false
LOG_LEVEL=INFO

# 可选 - 策略参数（动能脚本生效）
ATR_PERIOD=14
BODY_RATIO_THRESHOLD=0.6
CONFIRM_CANDLES=2
MAIN_LOOP_INTERVAL=10
MIN_ORDER_USDT=1

# 可选 - 保护参数（已在代码中启用）
EXTREME_VOLATILITY_THRESHOLD=0.05   # ATR/价 或 最近N根最大振幅 超过阈值则收紧SL倍数
MIN_SL_DISTANCE_PCT=0.005           # 最小止损距离（占入场价比例）
LIQUIDATION_BUFFER_PCT=0.15         # 强平价缓冲（尽力获取，获取不到则忽略）

# 说明：
# - 以上仅为示例，真实值请在 Railway 的 Variables 面板设置。
# - 本脚本不使用 SCAN_INTERVAL/ADX 等合并版参数。